{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ConnectionStrings": {
    "MovieTicketBookingDB": "Data Source=(LocalDB)\\MSSQLLocalDB;Initial Catalog=MovieBookingDB;Integrated Security=True"
  },

  "Jwt": {
    "Key": "DEV_ONLY_SUPER_SECRET_KEY_CHANGE_LATER",
    "Issuer": "MovieBookingAPI",
    "Audience": "MovieBookingUsers",
    "ExpireMinutes": 60
  },

  "SeatLock": {
    "LockDurationMinutes": 5
  },

  "Jobs": {
    "SeatLockExpiryIntervalSeconds": 60,
    "PendingBookingCleanupIntervalMinutes": 5
  },

  "SignalR": {
    "UseRedis": false,
    "RedisConnection": "localhost:6379"
  }
}
